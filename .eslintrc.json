{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard",
        "plugin:jest/recommended",
        "plugin:jest/style"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "plugins": [
        "@typescript-eslint",
        "jest"
    ],
    "rules": {
        "quotes": ["error", "double"],
        "comma-dangle": "off",
        "semi": "off",
        "space-before-function-paren": "off"
    }
}
